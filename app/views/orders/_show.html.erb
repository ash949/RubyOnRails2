<section class="container margin-bottom-md" >
  <header>
    <h2>
      <%= "This Order's ID: " + @order.id.to_s %>
    </h2>
  </header>

  <table class="table">
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Price</th>
        <th colspan="3">Operations</th>
      </tr>
    </thead>
    <tbody>
      <% @order.products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td><%= link_to 'Delete', [@user, @order, product], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% if @order.products.length > 0 %>
    <%= form_with(url: payments_create_url, method: :post ) do |form| %>
      <%= render partial: "shared/stripe_checkout_button" %>
    <% end %>
  <% end %>
  <br>
  <%= link_to 'Orders Dashboard', user_orders_path(@user.id), class: 'btn btn-primary' %>

</section><!-- end - show single order -->