<section class="container margin-bottom-md">
  <header>
    <h1><%= current_user.first_name + ' ' + current_user.last_name + "'s Orders"%></h1>
  </header>

  <table class="table">
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Status</th>
        <th>Total Cost</th>
        <th colspan="3">Operations</th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.status.status_type %></td>
          <td>$<%= order.total_cost_in_dollars %></td>
          <% if order.status.status_type == 'active'%>
            <td class="text-center"><%= link_to 'Pay With Card', [@user, order], class: 'btn btn-success'%></td>
            <!--<td><%#= link_to 'Edit', edit_order_path(order), class: 'btn btn-warning' %></td>-->
            <td><%= link_to 'Destroy', [@user, order], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
          <% else %>
            <td></td>
            <td></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%#= link_to 'New Order', new_order_path, class: 'btn btn-primary' %>

</section><!-- end - Orders Dashboard -->