<section class="container margin-bottom-md" >
  <header>
    <h2>
      <%= "This Order's ID: " + @order.id.to_s %>
    </h2>
  </header>

  <table class="table">
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Price</th>
        <th colspan="3">Operations</th>
      </tr>
    </thead>
    <tbody>
      <% @order.products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td><%= link_to 'Delete', remove_product_from_order_path(product_id: product.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'Orders Dashboard', orders_path, class: 'btn btn-primary' %>

</section><!-- end - show single order -->