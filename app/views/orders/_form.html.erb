<%= form_with(model: order, local: true, class: 'margin-bottom-md') do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <% render partial: 'shared/notice', locals: {type: 'danger', message: pluralize(order.errors.count, "error") + ' prohibited this order from being saved:'} %>
      <ul>
      <% order.errors.full_messages.each do |message| %>
        <% render partial: 'shared/notice', locals: {type: 'danger', message: message} %>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :user_id %>
    <%= form.number_field :user_id, id: :order_user_id, class: 'form-control'%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
