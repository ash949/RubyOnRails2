<section class="container margin-bottom-md">
  <% if devise_error_messages! && devise_error_messages!.length!= 0 %>
    <%= render partial: 'shared/notice', locals: {type: 'danger', message: devise_error_messages!} %>
  <% end %>
  <h2>Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field form-group">
      <%= f.label :password, "New password" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control' %>
    </div>

    <div class="field form-group">
      <%= f.label :password_confirmation, "Confirm new password" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'%>
    </div>

    <div class="actions">
      <%= f.submit "Change my password", class: 'btn btn-primary' %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>

  

</section><!-- end - change password form - edit -->