<section id="contact" class="container">
  <header>
    <h1>Contact Us</h1>
  </header>
  <div class="row">
    <div id="google-map" class="col-xs-12 col-sm-6 col-md-6">
      <div id="map-carousel" class="carousel slide" data-ride="carousel" data-interval="false">

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
          <% @branches.each_with_index do |branch, i| %>
          <div class="item <%= 'active' if i == 0 %>" data-branch="<%= branch.name%>">
            <div><%= branch.name%></div>
          </div>
          <% end %>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#map-carousel" role="button" data-slide="prev" onclick="changeCoordinates()">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#map-carousel" role="button" data-slide="next" onclick="changeCoordinates()">
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <div id="map"></div>
    </div><!-- end - map -->
    <form id="contact-form" class="col-xs-12 col-sm-6 col-md-6">
      
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" class="form-control" placeholder="Your name" title="Fill your name here" data-toggle="tooltip">
      </div>

      <div class="form-group">
        <label for="email">Email*</label>
        <input type="email" id="email" name="email" class="form-control" placeholder="Your Email" title="example@gmail.com (Required)" data-toggle="tooltip" required>
      </div>

      <div class="form-group">
        <label for="message">Message</label>
        <textarea cols="10" id="message" name="message" class="form-control" placeholder="Your message" data-toggle="tooltip" title="Type your message here (Required)" required></textarea>
      </div>

      <button type="submit" class="btn btn-primary">Send Message</button>
    </form><!-- end - contact - form -->
  </div>
</section><!-- end - contact section-->
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA-RkOq-xq-TRZaoVvtptssNQAbvhQ-lJg&callback=initMap"
    async defer></script>

