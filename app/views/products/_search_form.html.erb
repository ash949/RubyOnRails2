<section class="container">
  <%= form_with( url: products_url, id: "search-form", method: 'get', remote: true, class:'row' ) do |form| %>
    <div class="form-group col-xs-3 col-sm-2 col-md-2 col-md-offset-1">
      <%= form.label :search_term, 'Search for' %>
    </div>
    <div class="form-group col-xs-6 col-sm-8 col-md-6">
      <%= form.text_field :search_term, id: 'search-term', value: params[:search_term], class: 'form-control'%>
    </div>
    <%= form.submit 'Search', class: 'btn btn-primary col-xs-3 col-sm-2 col-md-2'%>
  <% end %>
</section><!-- end - search form -->