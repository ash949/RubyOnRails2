<section class="container product-reviews margin-bottom-md">
  <header>
    <h3><strong>Users Reviews</strong></h3>
  </header>
  <ul class="row">
  <% if @product.comments.count > 0 %>
    <% @product.comments.order(created_at: :desc).each do |comment| %>
      <li class="comment col-xs-12 col-sm-12 col-md-8">
        <%= render partial: 'comment', locals: {comment: comment}%>
      </li>
    <% end %>
  <% else %>
    <p>This product hasn't been reviewed yet</p>
  <% end %>
  
  </ul>
</section><!-- end - Users' Reviews -->