<% products ||= @products %>
<section id="product-list" class="container margin-bottom-md margin-top-md">
  
  <header>
    <h1>Products</h1>
  </header>
  <div class='no-products-found-message container margin-bottom-md margin-top-md' >
  </div><!-- end - empty product-list -->
  <ul class="product-list">
    <% products.each do |product| %>
      <li class="col-xs-12 col-sm-4">
        <%= render partial: 'products/product', locals: { product: product } %>
      </li>
    <% end %>
  </ul>
  <div class="clearfix"></div>
  <% if current_user && current_user.admin? %>
    <%= link_to 'New Product', new_product_path, class: 'btn btn-warning'%>
  <% end %>
  <%= will_paginate products %>
</section><!-- end - product-lists -->