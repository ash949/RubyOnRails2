<section class="container">
  <header>
    <h1> <%= @product.name %></h1>
  </header>
  <hr>
  <div class="row">
    <div class="order-action col-xs-12 col-sm-12 col-md-8" >
      <div>
        <p class="product-price">Price: <%= @product.price %>$</p>
        <button class="btn btn-primary">Add To Cart</button>
        <div class="clearfix"></div>
      </div>
    </div>
    <div class="product-showcase col-xs-12 col-sm-12 col-md-8">
      <div>
        <div id="showcase-carousel" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <li data-target="#showcase-carousel" data-slide-to="0" class="active">
              <%= image_tag @product.image_url, class: "img-responsive" %>
            </li>
            <% @product.showcase_images.split("|||").each_with_index do |showcase_image, i| %>
              <li data-target="#showcase-carousel" data-slide-to="<%= i + 1 %>">
                <%= image_tag showcase_image, class: "img-responsive" %>
              </li>
            <% end %>
          </ol>
        
          <!-- Wrapper for slides -->
          <div class="carousel-inner" role="listbox">
            <div class="item active">
              <%= image_tag @product.image_url, class: "img-responsive", alt: "Slide 1" %>
              <%# <div class="carousel-caption">
              </div> %>
            </div>
            <% @product.showcase_images.split("|||").each_with_index do |showcase_image, i| %>
            <div class="item">
              <%= image_tag showcase_image, class: "img-responsive", alt: "Slide #{i}" %>
              <%# <div class="carousel-caption">
              </div> %>
            </div>
            <% end %>
          </div>
        
          <!-- Controls -->
          <a class="left carousel-control" data-target="#showcase-carousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" data-target="#showcase-carousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        <p class="product-description"><%= @product.description %></p>
        <ul class="product-feature-list">
          <% @product.features.split("|||").each do |feature| %>
          <li><%= feature %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <%= link_to 'Edit', edit_product_path(@product), class: "btn btn-primary" %> |
  <%= link_to 'Back', products_path, class: "btn btn-primary" %>
  <hr>
  <br>

</section><!-- end - product showcase -->


